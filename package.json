{
  "name": "repo-template-public",
  "version": "0.1.0",
  "description": "A public GitHub template repository with DevOps hygiene and optional AI assistance",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "echo 'Lint placeholder - add ESLint later'",
    "prepare": "husky install",
    "typecheck": "tsc --noEmit",
    "commitlint": "commitlint --from=origin/main --to=HEAD --verbose",
    "commitlint:msg": "commitlint --edit \"$1\"",
    "spell": "cspell \"docs/**\" \"src/**\" \"*.md\"",
    "cz": "cz",
  "test": "node --experimental-modules test/changelog-detect.test.mjs || true",
    "verify": "pnpm lint && pnpm typecheck && pnpm build && pnpm test"
  },
  "keywords": [
    "template",
    "typescript",
    "devops",
    "ci",
    "changelog"
  ],
  "author": "Andrew Wilks",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.18.1",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@cspell/dict-en-au": "^1.1.7",
    "@types/node": "^24.7.0",
    "commitizen": "^4.2.5",
    "cspell": "^9.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "typescript": "^5.9.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
